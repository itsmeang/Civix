<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/RootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Send A Report"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="sans" />


    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="Cancel"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans" />


    <android.support.v7.widget.GridLayout
        android:layout_width="362dp"
        android:layout_height="386dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:padding="2dp">

        <Button
            android:id="@+id/buttonRoad"
            android:layout_width="111dp"
            android:layout_height="114dp"
            android:background="@drawable/pothole"
            android:gravity="bottom|center"
            android:text="Potholes"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="0" />

        <Button
            android:id="@+id/button10"
            android:layout_width="151dp"
            android:layout_height="111dp"
            android:background="@drawable/obstruction"
            android:gravity="bottom|center"
            android:text="Obstruction"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="0" />

        <Button
            android:id="@+id/button13"
            android:layout_width="95dp"
            android:layout_height="107dp"
            android:background="@drawable/snowplow"
            android:gravity="bottom|center"
            android:text="Snow"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="2" />

        <Button
            android:id="@+id/button11"
            android:layout_width="64dp"
            android:layout_height="114dp"
            android:background="@drawable/streetsign"
            android:gravity="bottom|center"
            android:text="Signs"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="0" />

        <Button
            android:id="@+id/button12"
            android:layout_width="150dp"
            android:layout_height="123dp"
            android:background="@drawable/crosswalk"
            android:gravity="bottom|center"
            android:text="crosswalk"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/button"
            android:layout_width="110dp"
            android:layout_height="125dp"
            android:background="@drawable/bikelane"
            android:gravity="bottom|center"
            android:text="Bike Lane"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="1" />

        <Button
            android:id="@+id/button14"
            android:layout_width="85dp"
            android:layout_height="104dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/other"
            android:gravity="bottom|center"
            android:text="Other"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="2" />

        <Button
            android:id="@+id/button15"
            android:layout_width="88dp"
            android:layout_height="119dp"
            android:background="@drawable/streetlight"
            android:gravity="bottom|center"
            android:text="Light"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="1" />

        <Button
            android:id="@+id/button16"
            android:layout_width="91dp"
            android:layout_height="108dp"
            android:background="@drawable/trafficlight"
            android:gravity="bottom|center"
            android:text="Signal"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="2" />

    </android.support.v7.widget.GridLayout>



</RelativeLayout>
